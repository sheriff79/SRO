					ДобавитьОшибку(ОбъектМетаданных,
						НСтр("ru = 'Установлены запрещенные права на объект'"), ТекстОшибки);
				КонецЕсли;
			КонецЕсли;
		КонецЦикла;
		Если ДобавленыПрава Тогда
